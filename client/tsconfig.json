{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@/src/*": ["./src/*"],
			"@/features/*": ["./src/features/*"],
			"@/shared/*": ["./src/shared/*"],
			"@/navigation/*": ["./src/navigation/*"],
			"@/components/*": ["./components/*"],
			"@/constants/*": ["./constants/*"],
			"@/hooks/*": ["./hooks/*"],
			"@/assets/*": ["./assets/*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"src/types/**/*.ts",
		"nativewind-env.d.ts"
	]
}
